---
import { getRelativeLocaleUrl } from "astro:i18n"; // 游녣 Importamos la funci칩n que nos permite obtener la ruta relativa de la p치gina en un idioma en concreto
import { getI18N } from "@i18n/index"; // 游녣 Importamos la funci칩n para obtener las traducciones

const { currentLocale } = Astro; // 游녣 Obtenemos el idioma actual
const currentPath = Astro.url.pathname; // 游녣 Obtenemos la ruta actual
const isBlog = currentPath.includes("articles"); // 游녣 Verificamos si estamos en la secci칩n de blog
const t = getI18N({ currentLocale }); // 游녣 Obtenemos las traducciones
---

<li>
  <a
    class:list={[
      "text-lg",
      {
        underline:
          currentPath === getRelativeLocaleUrl(currentLocale, "/") || isBlog,
      },
    ]}
    href={getRelativeLocaleUrl(currentLocale, "/")}>{t.navigation.HOME}</a
  >
</li>
<li>
  <a
    class:list={[
      "text-lg",
      {
        underline:
          currentPath === getRelativeLocaleUrl(currentLocale, "/about"),
      },
    ]}
    href={getRelativeLocaleUrl(currentLocale, "/about")}>{t.navigation.ABOUT}</a
  >
</li>
<li>
  <a
    class:list={[
      "text-lg",
      {
        underline:
          currentPath === getRelativeLocaleUrl(currentLocale, "/elements"),
      },
    ]}
    href={getRelativeLocaleUrl(currentLocale, "/elements")}
    >{t.navigation.ELEMENTS}</a
  >
</li>
